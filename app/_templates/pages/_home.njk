{% from "../structure/_header.njk" import header %}

{% set page = {
			"status": {
				"title": "Tu deuda actual es:",
				"btn": "¡Pagar ahora!"
			},
			"payments": {
				"title": "Últimos planes",
				"plans": [
					{
						"text": "REFI - MC3111223",
						"date": "17/10/20",
						"status": "<span class='bullet green'></span>Aprobado"
					},
					{
						"text": "REFI - MC3111223",
						"date": "17/10/20",
						"status": "<span class='bullet yellow'></span>En espera"
					}
				],
				"view": "Ver todos los planes"
			},
			"promotions": {
				"src": "https://placekitten.com/g/450/150",
				"view": "¡Accedé a este beneficio ahora!"
			},
			"promises": {
				"title": "Últimas promesas",
				"latest": [
					{
						"price": "$17,900",
						"cant": "1 producto",
						"date": "17/08/20"
					},
					{
						"price": "$37,600",
						"cant": "3 productos",
						"date": "17/08/20"
					},
					{
						"price": "$17,900",
						"cant": "1 producto",
						"date": "17/08/20"
					}
				],
				"view": "Ver todas las promesas"
			}
		}
%}
<section class="page-home">

	{{ header({
		section: 'Inicio',
		title: 'Hola Nicolas,',
		subtitle: '¡Es un gusto verte por acá! Queremos ayudarte a alivianar tus deudas ;)'
	}) }}
			
	<div class="flex-row flex-column-on-mobile justify-center">
		<div class="flex-column col-2-3">
			<div class="box flex-row">
				<div>
					<p class="first-row">{{ page.status.title }}</p>
					<p class="text-nowrap current-debt"><span class="text-xlarge">$</span> <span class="text-xxlarge">10590</span> <sup class="text-large">57</sup></p>
					<button class="btn">{{ page.status.btn }}</button>
				</div>
				<div class="home-illus-container">
					<img class="home-illus" alt="" src="/assets/images/sections/home/ilustracion.svg">
				</div>
			</div>
			<div class="">
				<h2>Tus productos</h2>
				<div class="list-view box">
					<div class="list-view-title">
						<div class="list-view-add"></div>
					</div>
					<hr>
					<ul class="list-view-content">
						{% for plan in page.payments.plans %}
						<li class="flex-row promises-latest flex-column-on-mobile">
							<div class="flex-column flex-grow">
								<p class="plan-text">{{ plan.text }}</p>
								<p class="plan-date">{{ plan.date }}</p>
							</div>
							<div class="flex-column flex-center">
								<p>{{ plan.status }}</p>
							</div>
						</li>
						{% endfor %}
					</ul>
					<p class="wide-link"><a href="#">{{ page.payments.view }}</a></p>
				</div>
			</div>
		</div>
		<div class="flex-column col-1-3">
			<div class="box prom-text relative">
				<p>Diseñamos un plan de pago especialmente para vos ;)</p>
				<div class="text-right">
					<button class="btn secondary">Ver plan</button>
				</div>
			</div>
			<div class="">
				<h2>Promesas de pago</h2>
				<div class="list-view box">
					<div class="list-view-title">
						<div class="list-view-add"></div>
					</div>
					<hr>
					<ul class="list-view-content">
						{% for promise in page.promises.latest %}
						<li class="flex-row promises-latest">
							<div class="flex-column flex-grow">
								<p class="promise-price">{{ promise.price}}</p>
								<p class="promise-date">{{ promise.cant}}</p>
							</div>
							<div class="flex-column flex-center">
								<p>{{ promise.date }}</p>
							</div>
						</li>
						{% endfor %}
					</ul>
					<p class="wide-link"><a href="#">{{ page.promises.view }}</a></p>
				</div>
			</div>
			<div class="">
				<h2>Planes de pago</h2>
				<div class="list-view box">
					<div class="list-view-title">
						<div class="list-view-add"></div>
					</div>
					<hr>
					<ul class="list-view-content">
						{% for promise in page.promises.latest %}
						<li class="flex-row promises-latest">
							<div class="flex-column flex-grow">
								<p class="promise-price">{{ promise.price}}</p>
								<p class="promise-date">{{ promise.cant}}</p>
							</div>
							<div class="flex-column flex-center">
								<p>{{ promise.date }}</p>
							</div>
						</li>
						{% endfor %}
					</ul>
					<p class="wide-link"><a href="#">{{ page.promises.view }}</a></p>
				</div>
			</div>
		</div>
	</div>
</section>