{% macro page(options) %}
<!DOCTYPE html>
<html lang="{{ head.lang }}" class="no-js">
	<head>
		{% include "_head.njk" %}
	</head>
<body class="emerix-page">

	<div class="flex-column">
		{% include "structure/_topbar.njk" %}
		<div class="flex-row flex-grow">
			<div>
			{% include "structure/_navigation.njk" %}
			</div>
			<div class="pages-container">
				{{ caller() }}
			</div>
		</div>
	</div>
</body>
</html>
{% endmacro %}

{% macro simple(options) %}
<!DOCTYPE html>
<html lang="{{ head.lang }}" class="no-js">
	<head>
		{% include "_head.njk" %}
	</head>
<body class="emerix-page">
	{{ caller() }}
</body>
</html>
{% endmacro %}